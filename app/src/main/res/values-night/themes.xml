<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lemonade" parent="Theme.MaterialComponents.DayNight">
        <!-- TitleBar color -->
        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/yellow_500</item>
        <item name="android:textColorPrimary">@color/yellow_200</item>
        <!-- StatusBar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- WindowBackground color -->
        <item name="android:windowBackground">@color/black</item>
        <!-- NavigationBar color -->
        <item name="android:navigationBarColor">?android:windowBackground</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>
</resources>